        <!--<span class="title">Users</span>-->
      <% end %>
    </li>

    <li class="list">
      <%= link_to customer_path(current_customer), class:"nav-link text-light" do %>
        <span class="icon"><i class="fas fa-user-circle"></i></span>
        <!--<span class="title">マイページ</span>-->
      <% end %>
    </li>
  </ul>
