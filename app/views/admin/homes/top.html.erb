<div>
  <div class="card-container">
    <% if @shoes.empty? %>
      <span class="m-3">投稿はありません</span>
    <% else %>
      <% @shoes.each do |shoe| %>
        <div class="card-shoe mb-3">
          <%= link_to admin_customer_path(shoe.customer) do %>
            <div class="card-header shoe-ch">
              <%= image_tag shoe.customer.get_profile_image(35,35), class: "rounded-circle mr-2" %>
              <%= shoe.customer.name %>
            </div>
          <% end %>
          <%= link_to admin_shoe_path(shoe) do %>
            <div class="card-body d-flex align-items-center justify-content-center">
              <%= image_tag shoe.get_shoe_image(140, 140), class: "mr-4" %>
              <div>
                <h5><%= shoe.name %></h5>
                <div class="ml-3">
                  靴サイズ：<%= shoe.shoe_size %> cm
                </div>
                <div class="ml-3">
                  マッチ度：<span><i class="fa-solid fa-heart"></i> <%= shoe.match_rate %> %</span>
                </div>
                <div class="ml-3">
                  お値段　：<%= shoe.price %> 円
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @shoes %>
  </div>
</div>
