<div class="row">
  <div class="col-md-3 m-4">
    <%= render 'admin/customers/info_admin', customer: @customer %>
  </div>
  <div class="col-md-8 ml-3">
    <div class="d-flex align-items-center ml-4 mb-3">
      <%= image_tag @shoe.get_shoe_image(150,150), class: "mr-5" %>
      <h1><%= @shoe.name %></h1>
    </div>
    <table class="table">
      <tbody>
        <tr>
          <th style="width: 30%;">感想</th>
          <th><%= @shoe.body %></th>
        </tr>
        <tr>
          <th>靴サイズ</th>
          <th><%= @shoe.shoe_size %> cm</th>
        </tr>
        <tr>
          <th>マッチ度 <i class="fa-solid fa-heart"></i></th>
          <th><%= @shoe.match_rate %> %</th>
        </tr>
        <tr>
          <th>タグ付け</th>
          <th>
            <% @shoe_tags.each do |tag| %>
              <i class="fas fa-hashtag"></i><%= tag.name %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>お値段</th>
          <th><%= @shoe.price %> 円</th>
        </tr>
      </tbody>
    </table>
    <div class="d-flex justify-content-between mt-4">
      <div class="ml-5">
        <%= link_to admin_shoe_comments_path(shoe_id: @shoe.id), class: "btn go-btn" do %>
          コメント(<%= @shoe.shoe_comments.count %>)
        <% end %>
      </div>
      <div class="mr-5">
        <%= link_to '削除', admin_shoe_path(@shoe), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn delete-btn" %>
      </div>
    </div>
  </div>
</div>

