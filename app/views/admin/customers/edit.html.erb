<div class="container">
  <h1>My情報</h1>
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, local: true do |f| %>
    <div class="form-group ml-5">
      <label for="customer_image">プロフィール画像</label>
      <div class="ml-4">
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
    </div>
    <div class="form-group ml-5">
      <label for="shoes_name">ユーザー名</label>
      <div class="ml-4">
        <%= f.text_field :name, autofocus: true, class: "custom-field" %>
      </div>
    </div>
    <div class="form-group ml-5">
      <label for="foot_size">足のサイズ</label>
      <div class="ml-4">
        <%= f.text_field :foot_size, class: "custom-field" %> cm
      </div>
    </div>
    <div class="form-group ml-5">
      <label for="foot_width">足幅</label>
      <div class="ml-4">
        <%= f.select :foot_width, Customer.foot_widths.keys.map { |k| [t("enums.customer.foot_width.#{k}"), k] } %>
      </div>
    </div>
    <div class="form-group ml-5">
      <label for="foot_type">足タイプ</label>
      <div class="foot-type-btn ml-4">
        <%= f.select :foot_type, Customer.foot_types.keys.map { |k| [t("enums.customer.foot_type.#{k}"), k] } %>
      </div>
      <%= image_tag "foot_type.jpg", class: "question-image ml-2 mt-2" %>
    </div>
    <div class="form-group ml-5">
      <label for="gender">性別</label>
      <div class="ml-4">
        <%= f.select :gender, Customer.genders.keys.map { |k| [t("enums.customer.gender.#{k}"), k] } %>
      </div>
    </div>
    <div class="form-group ml-5">
      <label for="foot_size">紹介文</label>
      <div class="ml-4">
        <%= f.text_area :introduction, class: "custom-area" %>
      </div>
    </div>
    <div class="form-group ml-5">
      <label for="foot_size">ユーザーステータス</label>
      <div class="row ml-4">
        <div class="mr-5">
          <%= f.radio_button :is_deleted, false %>
          <%= label :is_deleted_false, '有効' %>
        </div>
        <div>
          <%= f.radio_button :is_deleted, true %>
          <%= label :is_deleted_true, '退会' %>
        </div>
      </div>
    </div>
    <div class="form-group d-flex justify-content-center">
      <%= f.submit '変更',class:'btn edit-btn' %>
    </div>
  <% end %>
</div>