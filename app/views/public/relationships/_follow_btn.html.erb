<% unless customer == current_customer || current_customer.name == "guestcustomer" %>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォロー中", customer_relationships_path(customer), method: :delete, remote: true, class: "btn followers-btn" %>
  <% else %>
    <%= link_to "フォローする", customer_relationships_path(customer), method: :post, remote: true, class: "btn followings-btn" %>
  <% end %>
<% end %>