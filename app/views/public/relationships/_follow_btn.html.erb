<% unless customer == current_customer || current_customer.name == "guestcustomer" %>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォローを解除する", customer_relationships_path(customer), method: :delete %>
  <% else %>
    <%= link_to "フォローする", customer_relationships_path(customer), method: :post %>
  <% end %>
<% end %>