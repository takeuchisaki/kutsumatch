<h2>ログイン</h2>
<div class="ml-4">
  <%= form_with model: @customer, url: customer_session_path do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "custom-field ml-3" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "custom-field ml-3" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="form-group ml-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="form-group ml-3">
      <%= f.submit "ログイン", class: "btn go-btn" %>
    </div>
  <% end %>
  <div class="form-group ml-3">
    <%= render "public/shared/links" %>
  </div>
</div>