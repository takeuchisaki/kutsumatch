<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>靴情報</h1>
      <%= form_with model: @shoe, url: shoe_path, method: :patch, local: true do |f| %>
        <div class="form-group">
          <label for="shoe_image">商品画像</label><br>
          <%= f.file_field :shoe_image, accept: "image/*" %>
        <div class="form-group">
          <label for="shoes_name">商品名</label><br>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="form-group">
          <label for="shoes_opinion">感想</label><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <label for="shoes_size">靴サイズ</label><br>
          <%= f.select :shoes_size, options_for_select((20..35).step(0.5), @shoe.shoes_size), include_blank: true %> cm
        </div>
        <div class="form-group">
          <label for="match_rate">マッチ度</label><br>
          <%= f.text_field :match_rate %> ％
        </div>
        <div class="form-group">
          <label for="maker">メーカー名</label><br>
          <%= f.text_field :maker %>
        </div>
        <div class="form-group">
          <label for="genre">靴ジャンル</label><br>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, @shoe.genre_id), include_blank: true %>
        </div>
        <div class="form-group">
          <label for="price">値段</label><br>
          <%= f.text_field :price %> 円
        </div>
        <div class="form-group">
          <%= f.submit '変更',class:'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

