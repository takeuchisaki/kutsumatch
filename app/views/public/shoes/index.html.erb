<div class="row">
  
  <!--靴検索フォーム-->
  <div class="col-md-3 m-4">
    <%= render 'shoe_search_form' %>
  </div>
  <!--end-->
  
  <!--投稿一覧-->
  <div class="col-md-8 ml-3">
    
    <% if @shoes.empty? %>
      <span class="m-3">該当の投稿はありません</span>
    <% else %>
      <%= render 'index_shoe', shoes: @shoes %>
    <% end %>
    
    <!--ページネーション-->
    <div class="d-flex justify-content-center">
      <%= paginate @shoes %>
    </div>
    
  </div>
  <!--end-->
  
</div>