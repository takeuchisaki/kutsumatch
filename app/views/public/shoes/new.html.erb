<div class="container">
  <div　class="row">
    <%= render 'layouts/error', obj: @shoe %>
    <h1>靴情報</h1>
    <div class="note d-flex justify-content-center mb-3">
      <i class="fa-solid fa-asterisk"></i> 必須入力
    </div>
    <%= form_with model: @shoe, url: shoes_path, method: :post, local: true do |f| %>
    
      <!--靴画像-->
      <div class="form-group ml-5">
        <label for="shoe_image">商品画像</label>
        <div class="ml-4">
          <%= f.file_field :shoe_image, accept: "image/*" %>
        </div>
      </div>
      <!--end-->
      
      <!--商品名-->
      <div class="form-group ml-5">
        <label for="shoe_name">商品名 <i class="fa-solid fa-asterisk"></i></label>
        <div class="ml-4">
          <%= f.text_field :name, autofocus: true, class: "custom-field", style: "width: 300px;" %>
        </div>
      </div>
      <!--end-->
      
      <!--感想-->
      <div class="form-group ml-5">
        <label for="shoe_opinion">感想 <i class="fa-solid fa-asterisk"></i>（1文字以上200文字以下）</label>
        <div class="ml-4">
          <%= f.text_area :body, class: "custom-area" %>
        </div>
      </div>
      <!--end-->
      
      <!--靴サイズ-->
      <div class="form-group ml-5">
        <label for="shoe_size">靴サイズ <i class="fa-solid fa-asterisk"></i></label>
        <div class="ml-4">
          <%= f.select :shoe_size, options_for_select((20..35).step(0.5)), include_blank: true %> cm
        </div>
      </div>
      <!--end-->
      
      <!--タグ付け-->
      <div class="form-group ml-5">
        <label for="tag_name">タグ付け（タグ名を「、」で区切って入力してください）</label>
        <div class="ml-4">
          <%= f.text_area :tag_name, class: "custom-area" %>
        </div>
      </div>
      <!--end-->
      
      <!--値段-->
      <div class="form-group ml-5">
        <label for="price">値段（半角数字）</label>
        <div class="ml-4">
          <%= f.text_field :price, class: "custom-field" %> 円
        </div>
      </div>
      <!--end-->
      
      <!--投稿ボタン-->
      <div class="form-group d-flex justify-content-center">
        <%= f.submit '投稿',class:"btn go-btn" %>
      </div>
      <!--end-->
      
    <% end %>
  </div>
</div>
