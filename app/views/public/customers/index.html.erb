<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= form_with url: customers_path, local: true, method: :get do |f| %>
    <div class="form-group">
      <label for="foot_size">足のサイズ</label><br>
      <%= f.select :foot_size, options_for_select(20..35), include_blank: true %> cm
    </div>
  
    <div class="form-group">
      <label for="foot_width">足幅</label><br>
      <%= f.radio_button :foot_width, Customer.foot_widths.key(0), checked: false %>
      <%= f.label :foot_width_narrow, Customer.foot_widths_i18n[:narrow] %>
      <%= f.radio_button :foot_width, Customer.foot_widths.key(1) %>
      <%= f.label :foot_width_standard, Customer.foot_widths_i18n[:standard] %>
      <%= f.radio_button :foot_width, Customer.foot_widths.key(2) %>
      <%= f.label :foot_width_wide, Customer.foot_widths_i18n[:wide] %>
    </div>
  
    <div class="form-group">
      <label for="foot_type">足タイプ</label>
      
      <i class="fa-solid fa-circle-question"></i><br>
      <%= f.radio_button :foot_type, Customer.foot_types.key(0), checked: false %>
      <%= f.label :foot_type_egypt_type, Customer.foot_types_i18n[:egypt_type] %>
      <%= f.radio_button :foot_type, Customer.foot_types.key(1) %>
      <%= f.label :foot_type_greek_type, Customer.foot_types_i18n[:greek_type] %>
      <%= f.radio_button :foot_type, Customer.foot_types.key(2) %>
      <%= f.label :foot_type_square_type, Customer.foot_types_i18n[:square_type] %>
    </div>
  
    <div class="form-group">
      <label for="gender">性別</label><br>
      <%= f.radio_button :gender, Customer.genders.key(0), checked: false %>
      <%= f.label :gender_man, Customer.genders_i18n[:man] %>
      <%= f.radio_button :gender, Customer.genders.key(1) %>
      <%= f.label :gender_woman, Customer.genders_i18n[:woman] %>
    </div>
    <div class="actions">
      <%= f.submit "検索" %>
    </div>
    <% end %>
  </div>
  <div class="col-md-8">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= link_to customer_path(customer) do %>
                  <%= image_tag customer.get_profile_image(50,50) %>
                <% end %>
              </td>
              <td>
                <%= customer.name %>
              </td>
              <td>
                <%= customer.foot_size %>
              </td>
              <td>
                <% if current_customer.following?(customer) %>
                  <%= link_to "フォロー外す", customer_relationships_path(customer), method: :delete %>
                <% else %>
                  <%= link_to "フォローする", customer_relationships_path(customer), method: :post %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
</div>