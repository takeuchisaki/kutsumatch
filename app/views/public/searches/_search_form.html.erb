<div class="card">
  <div class="card-header">
    検索フォーム
  </div>
  <div class="card-body">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <div class="form-group">
        <label for="word">キーワード</label><br>
        <%= f.text_field :word, class: "form-control" %>
      </div>
      <div class="form-group">
        <div class="btn" data-toggle="buttons">
          <button type="button" class="btn btn-outline-primary">
            <%= f.radio_button :range, "Shoe", checked: false, class: "d-none" %>
            <%= f.label :range_shoe do %>
              <i class="fas fa-shoe-prints"></i>
            <% end %>
          </button>
          <button type="button" class="btn btn-outline-primary">
            <%= f.radio_button :range, "Tag", class: "d-none" %>
            <%= f.label :range_tag do %>
              <i class="fas fa-hashtag"></i>
            <% end %>
          </button>
          <button type="button" class="btn btn-outline-primary">
            <%= f.radio_button :range, "Customer", class: "d-none" %>
            <%= f.label :range_customer do %>
              <i class="far fa-user"></i>
            <% end %>
          </button>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "検索" %>
      </div>
    <% end %>
  </div>
</div>